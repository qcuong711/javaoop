package lab3.bai2;

import java.util.Scanner;

import lab2.bai1.Diem;

public class DoanThang {
	private Diem d1;
	private Diem d2;
	
	public DoanThang() {
		this.d1 = new Diem(0, 0);
		this.d2 = new Diem(1, 1);
	}
	
	public DoanThang(Diem d1, Diem d2) {
		this.d1 = d1;
		this.d2 = d2;
	}
	
	public DoanThang(int ax, int ay, int bx, int by) {
		this.d1 = new Diem(ax, ay);
		this.d2 = new Diem(bx, by);
	}
	
	public void nhap() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Nhap toa do diem A");
		System.out.println("xA :");
		int ax = sc.nextInt();
		System.out.println("yA :");
		int ay = sc.nextInt();
		System.out.println("xB :");
		int bx = sc.nextInt();
		System.out.println("yB :");
		int by = sc.nextInt();
		Diem d1 = new Diem(ax, ay);
		Diem d2 = new Diem(bx, by);
	}
}
