package lab3.bai2;

import java.util.Scanner;

import lab2.bai1.Diem;

public class DoanThang {
	private Diem d1;
	private Diem d2;
	
	public DoanThang() {
		this.d1 = new Diem(0, 0);
		this.d2 = new Diem(1, 1);
	}
	
	public DoanThang(Diem d1, Diem d2) {
		this.d1 = d1;
		this.d2 = d2;
	}
	
	public DoanThang(int ax, int ay, int bx, int by) {
		this.d1 = new Diem(ax, ay);
		this.d2 = new Diem(bx, by);
	}
	
	public void nhap() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Nhap toa do diem A");
		System.out.print("xA : ");
		int ax = sc.nextInt();
		System.out.print("yA : ");
		int ay = sc.nextInt();
		System.out.print("xB : ");
		int bx = sc.nextInt();
		System.out.print("yB : ");
		int by = sc.nextInt();
		this.d1 = new Diem(ax, ay);
		this.d2 = new Diem(bx, by);
	}
	
	public String toString() {
		return "Toa do 2 diem la (" + d1.getX() + ", " + d1.getY() + ")" + " va("
				+ d2.getX() + ", " + d2.getY() + ")";
	}
	
	public void tinhTien(int dx, int dy) {
		d1.setX(d1.getX() + dx);
		d1.setY(d1.getY() + dy);
		d2.setX(d2.getX() + dx);
		d2.setY(d2.getY() + dy);
	}
	
	public double doDaiDT() {
		double doDai = Math.sqrt(Math.pow(d2.getX() - d1.getX(), 2) 
				+ Math.pow(d2.getY() - d1.getY(), 2));
		return doDai;
	}
}
